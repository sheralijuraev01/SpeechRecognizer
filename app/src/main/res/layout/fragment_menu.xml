<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".ui.menu.MenuFragment">

    <LinearLayout
        android:id="@+id/menuAnalysisBack"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuBackArrowIcon"
            android:layout_width="@dimen/back_arrow_width"
            android:layout_height="@dimen/back_arrow_height"
            android:layout_marginStart="16dp"

            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Kategoriyalar"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:elevation="5dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/pronunciationContainer"
                    android:layout_width="@dimen/menu_item_container_size"
                    android:layout_height="@dimen/menu_item_container_size"

                    android:background="@color/main_color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/menu_item_image_size"
                        android:layout_height="@dimen/menu_item_image_size"
                        android:layout_marginEnd="5dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/pron_person" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="5dp"
                        android:text="So'zlarni to'g'ri talaffuz qilish"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/menu_item_text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:elevation="5dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/hearContainer"
                    android:layout_width="@dimen/menu_item_container_size"
                    android:layout_height="@dimen/menu_item_container_size"
                    android:background="@color/main_color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/menu_item_image_size"
                        android:layout_height="@dimen/menu_item_image_size"
                        android:gravity="center_horizontal"
                        android:src="@drawable/hearing_person" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="5dp"
                        android:text="Ovozda kerakli so'zni tanlash "
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/menu_item_text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/neuroContainer"
                android:layout_width="@dimen/menu_item_container_size"
                android:layout_height="@dimen/menu_item_container_size"

                android:background="@color/main_color"

                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/menu_item_image_size"
                    android:layout_height="@dimen/menu_item_image_size"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_horizontal"

                    android:src="@drawable/speech_person" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="5dp"
                    android:text="Neyrodinamik mashqlar"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/menu_item_text_size" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>